<!-- コメント機能 -->
<% book.book_comments.each do |b| %>
<tr>
  <td>
    <%= link_to user_path(b.user) do %>
      <%= attachment_image_tag(b.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></br>
      <%= b.user.name %>
    <% end %>
  </td>
  <td><%= b.comment %></td>

  <% if b.user == current_user %>
  <td>
    <%= link_to "destroy", book_book_comment_path(@book, b), method: :delete, class: "btn-btn danger" %>
  </td>
  <% end %>
</tr>
<% end %>