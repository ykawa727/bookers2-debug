<table class='table'>
  <!-- コメント機能 -->
  <% book_comments.each do |b| %>
  <tr>
    <td>
      <%= link_to user_path(b.user) do %>
        <%= attachment_image_tag(b.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></br>
        <%= b.user.name %>
      <% end %>
    </td>
    <td><%= b.comment %></td>

    <% if b.user == current_user %>
    <td id="book_comment_destroy_<%= book.id %>">
      <%= link_to "destroy", book_book_comment_path(b.book, b), method: :delete, class: "btn-btn danger", remote: true %>
    </td>
    <% end %>
   </tr>
   <% end %>
</table>